@model ABCRetails.Models.ViewModels.OrderCreateViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create Order</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary()
    </div>
}

<form method="post">
    <div class="mb-2">
        <label>Customer</label>
        <select class="form-select" asp-for="CustomerId" asp-items="Model.Customers">
            <option value="">-- Select Customer --</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label>Product</label>
        <select class="form-select" asp-for="ProductId" asp-items="Model.Products">
            <option value="">-- Select Product --</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label>Quantity</label>
        <input class="form-control" asp-for="Quantity" type="number" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label>Status</label>
        <select class="form-select" asp-for="Status">
            <option value="Pending">Pending</option>
            <option value="Processing">Processing</option>
            <option value="Shipped">Shipped</option>
            <option value="Delivered">Delivered</option>
            <option value="Cancelled">Cancelled</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a href="/Order" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}